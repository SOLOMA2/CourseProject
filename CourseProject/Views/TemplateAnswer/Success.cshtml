@{
    ViewData["Title"] = "Ответ сохранён";
}

<div class="container min-vh-100 d-flex align-items-center">
    <div class="row justify-content-center w-100">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body text-center p-5">
                    <!-- Иконка успеха -->
                    <div class="mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="#28a745" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                        </svg>
                    </div>

                    <!-- Заголовок -->
                    <h1 class="mb-3 fw-bold text-success">Спасибо!</h1>

                    <!-- Основной текст -->
                    <p class="lead mb-4 fs-5">
                        Ваши ответы успешно сохранены.<br>
                        Вы можете закрыть страницу или вернуться на главную.
                    </p>

                    <!-- Кнопка возврата -->
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-5 rounded-pill">
                        <i class="bi bi-house-door me-2"></i>На главную
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    }

    .lead {
        color: #6c757d;
        line-height: 1.7;
    }

    .btn-primary {
        transition: all 0.3s ease;
        padding: 0.75rem 2rem;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(41, 143, 255, 0.3);
        }
</style>