@model VerifyEmailVM
@{
	ViewData["Title"] = "VerifyEmail";
}
<div class="row d-flex justify-content-center">
	<div class="col-4 card p-3">
		<h2 class="text-center">Verify Email</h2>
		<form asp-action="VerifuEmail" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mb-1">
				<label asp-for="Email" >Email</label>
				<input asp-for="Email" class="form-control" />
								<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="d-grid gap-1">
				<input type="submit" value="Verify" class="btn btn-primary align-items-center my-2" />
			</div>
			<div class="text-center">
				<a asp-action="Login" class="text-decoration-none">Back</a>
			</div>
		</form>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}