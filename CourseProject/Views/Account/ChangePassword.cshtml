@model ChangePasswordVM
@{
	ViewData["Title"] = "ChangePassword";
}
<div class="row d-flex justify-content-center">
	<div class="col-4 card p-3">
		<h2 class="text-center">Change Password</h2>
		<form asp-action="VerifuEmail" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Email" />
			<div class="mb-1">
				<label asp-for="NewPassword">Email</label>
				<input asp-for="NewPassword" class="form-control" />
				<span asp-validation-for="NewPassword" class="text-danger"></span>
			</div>
			<div class="mb-1">
				<label asp-for="ConfirmPassword">Email</label>
				<input asp-for="ConfirmPassword" class="form-control" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
			<div class="d-grid gap-1">
				<input type="submit" value="Change" class="btn btn-primary align-items-center my-2" />
			</div>
			<div class="text-center">
				<a asp-action="VerifyEmail" class="text-decoration-none">Back</a>
			</div>
		</form>
	</div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}